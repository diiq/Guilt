{
    "name": "Guilt",
    "version": "0.1",
    "manifest_version": 2,
    "description": "Teens ask their mother to borrow the car; you ask Guilt to borrow the internet.",
    "content_scripts":[{
        "matches" : ["http://*/*",
                     "https://*/*"],
        "js": ["jquery-1.8.2.min.js", "js/jquery-ui-1.8.24.custom.min.js"],
        "css" : ["css/pepper-grinder/jquery-ui-1.8.24.custom.css"]

    }],
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ]
}